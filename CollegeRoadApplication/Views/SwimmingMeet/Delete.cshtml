@model CollegeRoadApplication.Models.SwimmingMeet

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-danger">Delete</h2>

<h3 class="text-danger">Are you sure you what to delete this swimming meet? </h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <ul>
        <li style="font-size: 20px">@Html.DisplayNameFor(m => m.Name) : @Html.DisplayFor(m => m.Name)</li>
    </ul>

    <div class="form-actions no-color">
        <br />
        <input type="submit" value="Delete" class="btn btn-default" /> |
