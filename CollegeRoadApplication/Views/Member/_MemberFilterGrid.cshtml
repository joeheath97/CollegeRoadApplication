@model IEnumerable<CollegeRoadApplication.Models.ApplicationUser>

<table class="table table-bordered table-hover">
    <thead class="bg-info">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Age)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            foreach (var member in Model)
            {
                if (member.IsArchived == false)
                {
                    <tr>
                        @*Name > Action > Controller > Param *@
                        <td>@Html.ActionLink(member.Name, "Edit", "Member", new { id = member.Id }, null)</td>
                        <td>@Html.DisplayTextFor(m => member.Age)</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Member", new { id = member.Id }, null)</td>
                    </tr>
                }

            }
        }
        else
        {
            <tr><td colspan="3" class="text-center">No Results Found</td></tr>
        }

    </tbody>
</table>